<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:src="@mipmap/puskesmas"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="100dp"
        android:layout_marginBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Diagnosa Awal Penyakit Umum\nPuskesmas Mobile"
            android:textSize="15dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:background="#3792cb">
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Silahkan Pilih Gejala Penyakit\nyang Anda Rasakan !"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit Kepala"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demam"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hidung Tersumbat"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenggorokan Gatal"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit di Bagian Dada"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batuk Berdahak"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bersin-bersin"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mata Berair"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batuk Kering"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nafas Sesak"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Susah Tidur"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kesulitan Menelan"
                android:onClick="onCheckboxClicked"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:background="#3792cb">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/buttondiag"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#149414"
            android:textColor="#FFF"
            android:onClick="diag"
            android:text="Diagnosa"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>