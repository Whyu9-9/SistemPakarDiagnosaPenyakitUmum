<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lainnya">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:paddingBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/notfound"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="130dp"
            android:layout_marginBottom="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi Sementara Ini\nBelum Mampu Mendiagnosa Penyakit Anda"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="180dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="130dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengapa Ini Bisa Terjadi??"
                    android:textColor="#3792cb"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:text="@string/why1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="280dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apa yang Harus Saya Lakukan?"
                    android:textColor="#3792cb"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:text="@string/why2"/>
            <Button
                android:id="@+id/calldoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call a Doctor"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:background="@drawable/button"
                android:textColor="#FFF"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/smsdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS to Doctor"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:background="@drawable/button"
                android:textColor="#FFF"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>